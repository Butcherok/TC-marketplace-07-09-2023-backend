							}
						}
					},
					"401": {
						"description": "Not authorized.",
						"content": {}
					}
				}
			}
		},
		"/users/logout": {
			"post": {
				"tags": ["Users"],
				"summary": "User`s logout",
				"parameters": [],
				"security": [{ "Bearer": [] }],
				"requestBody": {
					"content": {}
				},
				"responses": {
					"204": {
						"description": "No content",
						"content": {}
					},
					"401": {
						"description": "Not authorized.",
						"content": {}
					}
